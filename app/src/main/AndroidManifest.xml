<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Wordleandroidclient"
        android:usesCleartextTraffic="true"
        android:name=".MyApp">

        <!-- Launcher: Welcome first, it will route to Dashboard if already signed in -->
        <activity
            android:name="vcmsa.projects.wordleandroidclient.WelcomeActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Core game surface -->
        <activity
            android:name="vcmsa.projects.wordleandroidclient.MainActivity"
            android:exported="false" />

        <!-- Auth & entry -->
        <activity
            android:name="vcmsa.projects.wordleandroidclient.EntryChoiceActivity"
            android:exported="false" />
        <activity
            android:name="vcmsa.projects.wordleandroidclient.LoginActivity"
            android:exported="false" />
        <activity
            android:name="vcmsa.projects.wordleandroidclient.RegisterActivity"
            android:exported="false" />
        <activity
            android:name="vcmsa.projects.wordleandroidclient.DashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.NoActionBar" />

        <!-- Profile, Stats, etc. -->
        <activity
            android:name="vcmsa.projects.wordleandroidclient.ProfileActivity"
            android:exported="false" />
        <activity
            android:name="vcmsa.projects.wordleandroidclient.StatsActivity"
            android:exported="false"
            android:parentActivityName="vcmsa.projects.wordleandroidclient.DashboardActivity" />
        <activity
            android:name="vcmsa.projects.wordleandroidclient.BadgesActivity"
            android:exported="false" />

        <!-- Leaderboard -->
        <activity android:name=".leaderboard.LeaderboardActivity" />

        <!-- Multiplayer waiting room  -->
        <activity android:name=".multiplayer.MultiplayerModeActivity" />
        <activity android:name=".multiplayer.PlayWithAIActivity" />
        <activity android:name=".multiplayer.PlayWithFriendsActivity" />
        <activity android:name=".multiplayer.WaitingRoomActivity" />


        <activity android:name=".SettingsActivity" />


    </application>
</manifest>
